<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogFragmentAnimation">
        <item name="android:windowEnterAnimation">@anim/nav_default_pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/nav_default_pop_exit_anim</item>
    </style>

    <style name="FullScreenDialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CostumChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/custom_chip_color</item>
        <item name="chipStrokeColor">@color/custom_chip_color</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="chipBackgroundColor">@color/black_ligth</item>
    </style>

    <style name="CostumRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:layout_marginStart">12dp</item>
    </style>

</resources>